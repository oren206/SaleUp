<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saleup.OfferItemFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/txt_offer_price"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/txt_offer_location"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_offer_price"
        android:layout_toEndOf="@+id/txt_offer_price"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/txt_offer_date"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_offer_location"
        android:layout_toEndOf="@+id/txt_offer_location"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />
</RelativeLayout>
